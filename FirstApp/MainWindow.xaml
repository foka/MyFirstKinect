<Window x:Class="FirstApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded" Closing="Window_Closing" xmlns:my="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
		x:Name="thisWindow">
    <Grid>
		<k:KinectSensorChooserUI x:Name="kinectSensorChooserUI" />
		<my:KinectColorViewer HorizontalAlignment="Left" Margin="10,10,0,0" Name="kinectColorViewer1" VerticalAlignment="Top" Height="240" Width="320"
							  KinectSensorManager="{Binding KinectSensorManager, ElementName=thisWindow}">
		</my:KinectColorViewer>
		
		<Slider Height="192" Margin="0,12,12,0" Name="slider1" VerticalAlignment="Top" Orientation="Vertical" Minimum="-27" Maximum="27"
				HorizontalAlignment="Right" Width="29" 
				Value="{Binding KinectSensorManager.KinectSensor.ElevationAngle, Mode=TwoWay, ElementName=thisWindow}"/>
		<TextBox Height="23" Margin="0,210,12,0" Name="textBox1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="38" IsReadOnlyCaretVisible="False"
				 Text="{Binding KinectSensorManager.KinectSensor.ElevationAngle, Mode=TwoWay, ElementName=thisWindow}"/>
	</Grid>
</Window>
